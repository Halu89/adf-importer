{
    "name": "jira-issue-activity-ui-kit",
    "version": "1.1.28",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "scripts": {
        "lint": "biome lint",
        "lint:fix": "biome lint --write",
        "format": "biome format --write",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit --watch",
        "test": "vitest run --passWithNoTests",
        "test:watch": "vitest run --watch",
        "configure": "forge settings set usage-analytics false",
        "deploy:dev": "pnpm run configure && forge deploy",
        "deploy:stage": "pnpm run configure && forge deploy --environment staging",
        "deploy:prod": "pnpm run configure && forge deploy --environment production",
        "install:stage": "forge install --confirm-scopes  --environment staging --license active",
        "install:dev": "forge install --confirm-scopes --license active",
        "uninstall:dev": "forge uninstall ",
        "upgrade:dev": "forge install --upgrade --confirm-scopes --license active",
        "tunnel:dev": "forge tunnel"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@forge/cli": "^12.10.0",
        "@types/node": "^24.10.1",
        "@types/react": "^18.0.0",
        "eslint": "^8.56.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "pnpm": "^10.24.0",
        "typescript": "^4.8.4",
        "vitest": "^4.0.14"
    },
    "dependencies": {
        "@forge/api": "^6.4.0",
        "@forge/bridge": "5.9.1",
        "@forge/kvs": "^1.2.2",
        "@forge/react": "11.8.1",
        "@forge/resolver": "1.7.1",
        "@tanstack/react-query": "^5.90.11",
        "fast-xml-parser": "^5.3.2",
        "react": "^18.2.0",
        "zod": "3.24.4"
    }
}
