{
  "name": "jira-issue-activity-ui-kit",
  "version": "1.1.28",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint src/**/*",
    "format": "pnpm exec biome format --write ./src",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "vitest run --passWithNoTests",
    "configure": "forge settings set usage-analytics false",
    "deploy:dev": " forge deploy",
    "deploy:stage": "pnpm run configure && npm run manifest:stage && forge deploy --environment staging --non-interactive",
    "deploy:prod": "pnpm run configure && npm run manifest:prod && forge deploy --environment production --non-interactive",
    "install:stage": " forge install --confirm-scopes  --environment staging --license active",
    "install:dev": " forge install --confirm-scopes --license active",
    "uninstall:dev": " forge uninstall ",
    "upgrade:dev": " forge install --upgrade --confirm-scopes --license active"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@forge/cli": "^12.10.0",
    "@types/react": "^18.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^4.8.4",
    "pnpm": "^10.24.0"
  },
  "dependencies": {
    "@forge/bridge": "5.9.1",
    "@forge/react": "11.8.1",
    "@forge/resolver": "1.7.1",
    "react": "^18.2.0"
  }
}
